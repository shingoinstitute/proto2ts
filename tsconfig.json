{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "target": "es2016",
    "outDir": "build",
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.mock.ts",
    "**/*.spec.ts"
  ]
}
